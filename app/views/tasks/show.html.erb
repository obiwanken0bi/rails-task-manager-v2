<h1><%= @task.title.capitalize %></h1>

<p><%= @task.details %></p>

<div>
  <% if @task.completed %>
    <p><input type="checkbox" checked> This task is completed</p>
  <% else %>
    <p><input type="checkbox"> This task is not completed yet</p>
  <% end %>
</div>

<%= link_to "Back to list", tasks_path %>
